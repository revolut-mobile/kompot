<?xml version="1.0" encoding="utf-8"?>
<com.revolut.kompot.view.ControllerContainerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    app:fitNavigationBar="false">

    <com.revolut.kompot.view.ControllerContainerFrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fitNavigationBar="false" />

    <com.revolut.kompot.view.ControllerContainerFrameLayout
        android:id="@+id/containerModal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:fitNavigationBar="false" />
</com.revolut.kompot.view.ControllerContainerFrameLayout>